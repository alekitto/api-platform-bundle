<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="kcs_api_platform.exception_listener.controller">kcs_api_platform.exception_controller:showAction</parameter>
    </parameters>

    <services>
        <service class="Kcs\ApiPlatformBundle\Controller\ExceptionController" id="kcs_api_platform.exception_controller" public="true">
            <argument type="service" id="kcs_serializer.serializer" />
            <argument type="service" id="kcs_api.view_serialization_context.prototype" />
            <argument>%kernel.debug%</argument>
        </service>

        <service class="Kcs\ApiPlatformBundle\HttpKernel\ExceptionListener" id="Kcs\ApiPlatformBundle\HttpKernel\ExceptionListener">
            <argument>%kcs_api_platform.exception_listener.controller%</argument>
            <argument type="service" id="logger" on-invalid="null" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
