<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Kcs\Serializer\SerializationContext" id="kcs_api.view_serialization_context.prototype" shared="false">
            <factory class="Kcs\Serializer\SerializationContext" method="create" />
            <call method="enableMaxDepthChecks" />
            <call method="setSerializeNull">
                <argument>true</argument>
            </call>
        </service>

        <service class="Fazland\ApiPlatformBundle\HttpKernel\ViewHandler" id="Fazland\ApiPlatformBundle\HttpKernel\ViewHandler">
            <argument type="service" id="kcs_serializer.serializer" />
            <argument type="service" id="kcs_api.view_serialization_context.prototype" />
            <argument type="service" id="security.token_storage" on-invalid="null" />

            <tag name="kernel.event_subscriber" />
        </service>

        <service class="Fazland\ApiPlatformBundle\HttpKernel\AcceptHeaderParser" id="Fazland\ApiPlatformBundle\HttpKernel\AcceptHeaderParser">
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
