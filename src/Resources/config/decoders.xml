<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Kcs\ApiPlatformBundle\Decoder\DecoderProvider" id="Kcs\ApiPlatformBundle\Decoder\DecoderProvider">
            <argument type="collection" />
        </service>
        <service id="Kcs\ApiPlatformBundle\Decoder\DecoderProviderInterface" alias="Kcs\ApiPlatformBundle\Decoder\DecoderProvider" />

        <service class="Kcs\ApiPlatformBundle\Decoder\JsonDecoder" id="Kcs\ApiPlatformBundle\Decoder\JsonDecoder">
            <tag name="kcs_api.decoder" />
        </service>

        <service class="Kcs\ApiPlatformBundle\HttpKernel\BodyConverter" id="Kcs\ApiPlatformBundle\HttpKernel\BodyConverter">
            <argument type="service" id="Kcs\ApiPlatformBundle\Decoder\DecoderProviderInterface" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
